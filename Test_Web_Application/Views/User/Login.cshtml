@model Test_Web_Application.Models.UserLogin
@if (TempData["SuccessRigestration"] != null)
{
    <h2 class="h5 text-center mt-5">@TempData["successRigestration"]</h2>
}

<div class="row mt-5 mb-1 me-5 ms-5">
    <div class="col-2 col-md-2 align-items-baseline align-self-baseline"></div>
    <div class="col-8 col-md-8 card shadow-lg rounded-5 p-0 m-0 border-white">
        <div class="row">
            <div class="col-md-5">
                <img class="align-items-center rounded-start-5 shadow img-fluid" src="@("~/Image/reg1_image-removebg.png")" asp-append-version="true" />
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5 mt-4 mb-4 align-content-center align-self-center align-content-center">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h1 class="h4 text-center text-md-end text-black">Login</h1>
                    <div class="form-group mt-3 mx-3">
                        <label asp-for="Email" class="control-label h6 text-black">User Name</label>
                        <input asp-for="Email" placeholder="User@example.com" class="form-control shadow beige_color rounded-1" />
                        <span asp-validation-for="Email" class="text-black-50 h6"></span>
                    </div>
                    <div class="form-group mt-3 mx-3">
                        <label asp-for="Password" class="control-label h6 text-black"></label>
                        <input asp-for="Password" class="form-control shadow beige_color rounded-1" />
                        <span asp-validation-for="Password" class="text-black-50 h6"></span>
                    </div>
                    <div class="row mt-4 mb-4 mx-2">
                        <div class="col-6 col-md-6">
                            <div class="form-group">
                                <h6 class="h6 text-black">Remember me?</h6>
                            </div>
                        </div>
                        <div class="col-6 col-md-6  text-center text-md-end">
                            <input  checkbox" class="form-check-input shadow border-black beige_color rounded-1" />
                        </div>
                    </div>
                    <div class="row mt-2 mx-2">
                        <div class="col-12 col-md-12 text-center  ">
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary shadow green_color rounded-1 w-100" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
    <div class="col-2 col-md-2 align-items-end align-self-end">
        <img class="align-items-center rounded-5 opacity-75 img-fluid" src="@("~/Image/home_image2.png")" asp-append-version="true" />
    </div>
</div>
