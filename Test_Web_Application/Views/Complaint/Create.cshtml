    @model Test_Web_Application.Models.ComplaintsApp
@{
   
    var User = ViewBag.UserObject;
}


    <div class="row m-5">
    <div class="col-2"></div>
    <div class="col-8 col-md-8 "><h4 class="">Create New Complaint</h4></div>
   @*  <div class="col-6 col-md-6  text-end "> <img class="p-0 " src="@("~/Image/Create_Image.png")" asp-append-version="true " /></div>
      *@   
 
    
    </div>


    <div class=" row  align-middle me-5 ms-5 ">
        <div class="col-2"></div>
        <div class="col-8 ">
        <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-4">
                <input asp-for="UserId" type="hidden" value="@User.Id" class="form-control shadow rounded-1 text-black beige_color" />
                <input asp-for="UserGmail" type="hidden" value="@User.Email" class="form-control shadow rounded-1 text-black beige_color" />
                    <div class="col-6">
                        <div class="form-group">
                    <label asp-for="Name" class="control-label text-black h5"></label>
                        <input asp-for="Name" class="form-control shadow rounded-1 text-black beige_color" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6 "> 
                        <div class="form-group">
                    <label asp-for="Type" class="control-label text-black h5"></label>
                        <input asp-for="Type" class="form-control shadow rounded-1 text-black beige_color" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                     </div>
                </div>


                <div class="form-group mb-4">
            <label asp-for="Content" class="control-label h5"></label>
                <textarea asp-for="Content" class="form-control shadow text-black beige_color" rows="6" placeholder=""></textarea>
            <span asp-validation-for="Content" class="text-danger rounded-1"></span>
            </div>
            <div class="card shadow border-white rounded-1 mb-4 pt-3 pe-2 ps-2 pb-2">
            <div class="row me-1 ms-1 ">
               
                    <div class="col-8 align-items-center align-self-center"><h4 class="h5 text-black">Add Mental Demand </h4></div>
                    <div class="col-4 mb-1 text-end">
                       <i id ="toggleDivOneButton" class="bi bi-plus-square-fill   text-black"></i>
                       
                    </div>
                </div>
            </div>

            <div class="form-group mb-4" id="demandOneDivOne" style="display: none;">
                <label asp-for="demandOneText" class="control-label h5">Complaint Content </label>
                <textarea asp-for="demandOneText" class="form-control shadow text-black beige_color" rows="6" placeholder=""></textarea>
                <span asp-validation-for="demandOneText" class="text-danger rounded-1"></span>
            </div>




            <div class="card shadow border-white rounded-1 mb-4 pt-3 pe-2 ps-2 pb-2">
                <div class="row me-1 ms-1 ">

                    <div class="col-8 align-items-center align-self-center"><h4 class="h5 text-black">Add assurance Demand </h4></div>
                    <div class="col-4 mb-1 text-end">
                        <i id="toggleDivButtonTwo" class="bi bi-plus-square-fill   text-black"></i>

                    </div>
                </div>
            </div>

            <div class="form-group mb-4" id="demandTwoDiv" style="display: none;">
                <label asp-for="demandTwoText" class="control-label h5">Complaint Content </label>
                <textarea asp-for="demandTwoText" class="form-control shadow text-black beige_color" rows="6" placeholder=""></textarea>
                <span asp-validation-for="demandTwoText" class="text-danger rounded-1"></span>
            </div>


            <div class="form-group mb-5">
                <label asp-for="uploadFile" class="control-label h5">Upload File</label>
                <input asp-for="uploadFile"  class="form-control shadow text-black fw-bolder beige_color" >
                <span asp-validation-for="uploadFile" class="text-danger rounded-1"></span>
            </div>

               <div class="row">
                <div class="form-group col-6">
                    <input type="submit" value="Create" class="btn btn-primary rounded-1 shadow green_color" />
            </div> 
            <div class="col-6 text-end">
                    <a asp-action="Index" class="btn border-2 rounded-1 shadow" style="border-color:#11393B;color:#11393B ">Back to List</a>
                </div>
            </div>
            </form>
        
   
    

  
    </div>
    <div class="col-2"></div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var toggleDivButtonOne = document.getElementById("toggleDivOneButton");
        var demandOneDivOne = document.getElementById("demandOneDivOne");

        toggleDivButtonOne.addEventListener("click", function () {
            if (demandOneDivOne.style.display === "none") {
                demandOneDivOne.style.display = "block";
            } else {
                demandOneDivOne.style.display = "none";
            }
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        var toggleDivButtonTwo = document.getElementById("toggleDivButtonTwo");
        var demandTwoDiv = document.getElementById("demandTwoDiv");

        toggleDivButtonTwo.addEventListener("click", function () {
            if (demandTwoDiv.style.display === "none") {
                demandTwoDiv.style.display = "block";
            } else {
                demandTwoDiv.style.display = "none";
            }
        });
    });
</script>